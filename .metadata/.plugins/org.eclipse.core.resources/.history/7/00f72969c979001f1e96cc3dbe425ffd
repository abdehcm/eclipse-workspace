package clasefile;

import java.io.FileWriter;
import java.io.IOException;

public class FlujoDeCaracteres {

	public static void main(String[] args) {

		// Nombre del archivo donde se escribir√°
		String nombreFichero = "hola_mundo.txt";

		try {
			// Crear el objeto FileWriter que permite escribir en el archivo
			FileWriter fw = new FileWriter(nombreFichero);

			// Escribir "Hola Mundo" en el archivo
			fw.write("Hola Mundo");

			// Cerrar el FileWriter para liberar recursos
			fw.close();

		} catch (IOException e) {
			System.out.println("Error al escribir en el archivo.");
			e.printStackTrace();
		}

	}

}
